{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "globals": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": [
      "no-unsanitized"
    ],
    "rules": {
        "curly": ["error", "multi-line"],
        "no-console": "off",
        "no-unsanitized/method": "error",
        "no-unsanitized/property": "error",
        "no-unused-vars": ["error", {
            "vars": "local",
            "args": "none"
        }],
        "no-useless-escape": "off",
        "prefer-const": ["error"],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "quote-props": ["error", "always"]
    }
}